// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  role      Role
  client    Client?
  worker    Worker?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  Worker
  Client
}

model Worker{
  id          String   @id @default(cuid())
  name        String?
  avatar      String?
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  form        Form?
  latitude      Float?
  longitude     Float?
  conversations Conversation[] 
  appliedPosts AppliedWorker[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Client{
  id          String   @id @default(cuid())
  name        String?
  avatar      String?
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  conversations Conversation[] 
  contact     String?
  latitude      Float?
  longitude     Float?
  location    String?
  address     String?
  posts       Post[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Form{
  id          String   @id @default(cuid())
  workerId    String   @unique
  worker      Worker   @relation(fields: [workerId], references: [id])
  name        String?
  age         Int?
  workingAddress String?
  category    Category?
  contact     String?
  aadhaarNumber String?
  panNumber   String?
  description String?
  gender      String?
  upi         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category{
  Plumber
  Electrician
  Carpenter
  Painter
  Cleaner
  Mechanic
  Gardener
  Other
}

model Post {
  id          String   @id @default(cuid())
  title       String?
  description String?
  budget      Float?
  category    Category?
  media       Media[]
  deadline    DateTime?
  appliedWorkers AppliedWorker[] @relation("AppliedWorkers")
  acceptedStatus PostStatus?
  selectedWorkerId String?
  authorId    String
  author      Client   @relation(fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum PostStatus {
  Open
  InProgress
  Completed
  Cancelled
}

model Media {
  id        String   @id @default(cuid())
  url       String
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
}

model AppliedWorker {
  id        String   @id @default(cuid())
  postId    String
  workerId  String
  selected  Boolean  @default(false)
  description String?
  budget    Float?
  post      Post     @relation("AppliedWorkers",fields: [postId], references: [id])
  worker    Worker   @relation(fields: [workerId], references: [id])
  createdAt DateTime @default(now())
}

/////////////////////////////models for chatting 
model Conversation {
  id        String  @id @default(cuid())
  workerId  String
  clientId  String
  worker    Worker  @relation(fields: [workerId], references: [id])
  client    Client  @relation(fields: [clientId], references: [id])
  messages  Message[] 
  createdAt DateTime @default(now())
}

model Message {
  id              String        @id @default(cuid())
  conversationId  String
  senderId        String
  text            String
  createdAt       DateTime      @default(now())
  conversation    Conversation  @relation(fields: [conversationId], references: [id])
}
